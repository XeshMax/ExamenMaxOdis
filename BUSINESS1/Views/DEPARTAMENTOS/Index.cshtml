@model IEnumerable<BUSINESS1.Models.DEPARTAMENTOS>

@{
    ViewBag.Title = "Index";
}

<h2>DEPARTAMENTOS</h2>

<p>
    @Html.ActionLink("AÑADIR DEPARTAMENTO", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomDepartamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomDepartamento)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdDepartamento }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id=item.IdDepartamento }, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "Delete", new { id=item.IdDepartamento }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
