@model IEnumerable<BUSINESS1.Models.NOMINA>

@{
    ViewBag.Title = "Index";
}

<h2>NOMINAS</h2>

<p>
    @Html.ActionLink("CREAR NOMINA", "Create", "", new { @class = "btn btn-success" })
</p>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SueldoDia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SueldoQuincenal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMPLEADOS.NomEmpleado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SueldoDia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SueldoQuincenal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMPLEADOS.NomEmpleado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdNomina }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "Details", new { id = item.IdNomina }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.IdNomina }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }


</table>

